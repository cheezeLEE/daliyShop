<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shopping.daliyShop.mapper.TestMapper">
    <select id="findAll" resultType="TestModel">
        SELECT * FROM tbl_test
    </select>

    <select id="selectByNo" resultType="TestModel">
        SELECT * FROM tbl_test where usr_no = #{usrNo}
    </select>

    <insert id="insert" parameterType="TestModel">
        INSERT INTO tbl_test(usr_id, usr_pw, usr_name)
        VALUES(#{usrId}, #{usrPw}, #{usrName})
    </insert>
</mapper>